{
  "name": "ctimejs",
  "version": "0.1.0",
  "author": "Christian Krause <chris+ctime@christiankrause.de>",
  "license": "MIT",
  "description": "light but powerful timestamp and date manipulation library",
  "main": "dist/ctime.js",
  "dev:main": "dist/ctime.dev.js",
  "minified:main": "dist/ctime.min.js",
  "scripts": {
    "compile:main": "rollup -c config/rollup.js",
    "build": "npm-run-all --silent optimize minify size",
    "optimize": "uglifyjs dist/ctime.dev.js -c conditionals=false,sequences=false,loops=false,join_vars=false,collapse_vars=false --pure-funcs=Object.defineProperty -b width=120,quote_style=3 -o dist/ctime.js -p relative --in-source-map dist/ctime.dev.js.map --source-map dist/ctime.js.map",
    "minify": "uglifyjs dist/ctime.js -c collapse_vars,evaluate,screw_ie8,unsafe,loops=false,keep_fargs=false,pure_getters,unused,dead_code -m -o dist/ctime.min.js -p relative --in-source-map dist/ctime.js.map --source-map dist/ctime.min.js.map",
    "test:size": "bundlesize",
    "size": "node -e \"process.stdout.write('gzip size: ')\" && gzip-size --raw dist/ctime.min.js",
    "test": "npm-run-all --parallel test:karma",
    "test:karma": "karma start tests/karma.conf.js --single-run",
    "test:karma:watch": "npm run test:karma -- no-single-run",
    "version": "./version.sh",
    "postversion": "git push origin master && git push origin master --tags"
  },
  "keywords": [
    "date",
    "timestamp",
    "unix"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "bundlesize": "^0.17.0",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "core-js": "^2.4.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "diff": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.67.1",
    "gzip-size-cli": "^2.0.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jscodeshift": "^0.5.0",
    "karma": "^3.1.3",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sinon": "^1.0.5",
    "karma-source-map-support": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.0.4",
    "npm-run-all": "^4.0.0",
    "puppeteer": "^1.5.0",
    "rimraf": "^2.5.3",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-memory": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sinon": "^4.4.2",
    "sinon-chai": "^3.0.0",
    "uglify-js": "^2.7.5",
    "webpack": "^4.26.1"
  },
  "bundlesize": [
    {
      "path": "./dist/ctime.min.js",
      "threshold": "1Kb"
    }
  ]
}
